{
  "name": "cvs-tsk-sec-pr-tool",
  "version": "2.1.3",
  "description": "Finds dependabot PRs and take actions",
  "main": "index.js",
  "author": "Martin Kemp",
  "repository": "https://github.com/dvsa/cvs-tsk-sec-pr-tool",
  "license": "MIT",
  "scripts": {
    "audit-dep": "npm audit",
    "build": "tsc",
    "build:watch": "tsc && (tsc -w --preserveWatchOutput & nodemon)",
    "dev": "npm run build:watch",
    "start": "probot run ./lib/index.js",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "test": "npm run lint && npx jest",
    "test-i": "echo 'Not implemented'",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "clean": "rm -rf lib/",
    "package": "npm run build && docker build --pull -t cvs/sec-pr-tool:$npm_package_version -t cvs/sec-pr-tool:latest .",
    "sonar-scanner": "echo 'Not implemented'"
  },
  "dependencies": {
    "jenkins": "^0.28.1",
    "probot": "^11.4.1"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.7",
    "@types/jenkins": "^0.23.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.x",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^26.6.3",
    "jest-sonar-reporter": "^2.0.0",
    "nock": "^13.1.3",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "smee-client": "^1.2.2",
    "ts-jest": "^26.5.6",
    "typescript": "^4.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/test/"
    ],
    "testRegex": ".*\\.test.ts",
    "testResultsProcessor": "jest-sonar-reporter",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
