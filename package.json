{
  "name": "cvs-tsk-sec-pr-tool",
  "version": "1.0.5",
  "description": "Finds dependabot PRs and take actions",
  "main": "index.js",
  "author": "Martin Kemp",
  "repository": "https://github.com/dvsa/cvs-tsk-sec-pr-tool",
  "license": "MIT",
  "engines": {
    "node": ">=12.16 <13"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc && (tsc -w --preserveWatchOutput & nodemon)",
    "dev": "npm run build:watch",
    "start": "probot run ./lib/index.js",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "test": "jest && npm run lint",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "clean": "rm -rf lib/",
    "package": "npm run build && docker build -t cvs/sec-pr-tool:$npm_package_version -t cvs/sec-pr-tool:latest ."
  },
  "dependencies": {
    "jenkins": "^0.28.0",
    "probot": "^9.11.2"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/jenkins": "^0.23.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.x",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.2.1",
    "nock": "^12.0.3",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2",
    "smee-client": "^1.1.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.7.5"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
