{
  "name": "cvs-tsk-sec-pr-tool",
  "version": "2.1.1",
  "description": "Finds dependabot PRs and take actions",
  "main": "index.js",
  "author": "Martin Kemp",
  "repository": "https://github.com/dvsa/cvs-tsk-sec-pr-tool",
  "license": "MIT",
  "scripts": {
    "audit-dep": "npm audit",
    "build": "tsc",
    "build:watch": "tsc && (tsc -w --preserveWatchOutput & nodemon)",
    "dev": "npm run build:watch",
    "start": "probot run ./lib/index.js",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "test": "npm run lint && npx jest",
    "test-i": "echo 'Not implemented'",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "clean": "rm -rf lib/",
    "package": "npm run build && docker build --pull -t cvs/sec-pr-tool:$npm_package_version -t cvs/sec-pr-tool:latest .",
    "sonar-scanner": "echo 'Not implemented'"
  },
  "dependencies": {
    "jenkins": "^0.28.0",
    "probot": "^9.14.1"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/jenkins": "^0.23.1",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.x",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.10.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.2",
    "jest-sonar-reporter": "^2.0.0",
    "nock": "^13.0.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "smee-client": "^1.2.2",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src/", "<rootDir>/test/"],
    "testRegex": ".*\\.test.ts",
    "testResultsProcessor": "jest-sonar-reporter",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  }
}
