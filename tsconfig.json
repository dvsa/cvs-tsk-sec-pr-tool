{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["ES2018"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "pretty": true,
    "skipLibCheck": true
  },
  "include": ["src/"],
  "compileOnSave": false
}
